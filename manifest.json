{
  "manifest_version": 2,
  "name": "Template Inspector",
  "description": "Allows you to right click -> 'Inspect Template'.",
  "version": "0.1",
  "permissions": [
    "contextMenus"
  ],
  "background": {
     "scripts": ["background.js"]
   },
  "content_scripts": [{
    "matches": ["http://127.0.0.1/*", "http://0.0.0.0/*", "http://localhost/*", "http://local.leapmotion/*"],
    "css": ["css/main.css"],
    "js": [
      "js/lib/angular.js", "js/lib/leap.js",
      "js/core_ext.js", "js/app.js","js/hand_directive.js", "js/leap_factory.js", "js/template_factory.js",
      "content_script.js"
    ]
  }]
}